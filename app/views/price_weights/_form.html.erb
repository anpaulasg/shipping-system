<%=form_with(model: @price_weight) do |pw| %>

    <div>
        <%= pw.label :min_weight%>
        <%= pw.number_field :min_weight %>
    </div>

    <div>
        <%= pw.label :max_weight%>
        <%= pw.number_field :max_weight %>
    </div>

    <div>
        <%= pw.label :weight_price%>
        <%=pw.text_field :weight_price %>
    </div>

    <div>
        <%= pw.label :delivery_mode_id %>
        <%= pw.collection_select :delivery_mode_id, @delivery_modes, :id, :name %>
    </div>

    <div>
        <%= pw.submit 'Enviar'%>
    </div>
<%end%>
